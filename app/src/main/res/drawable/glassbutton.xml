<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
            <shape android:shape="rectangle">
                <solid android:color="#80FFFFFF"/> <!-- Semi-transparent white color -->
                <corners android:radius="8dp"/> <!-- Adjust the radius as needed -->
            </shape>
        </item>
        <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
            <shape android:shape="rectangle">
                <solid android:color="#DFFFFFFF"/> <!-- Lighter semi-transparent white color for the border -->
                <corners android:radius="8dp"/> <!-- Adjust the radius as needed -->
            </shape>
        </item>

</layer-list>