<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D293A"
    android:orientation="vertical"
    tools:context="com.example.StartActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d293a"
        android:fontFamily="@font/fira_mono_medium"
        android:padding="50dp"
        android:text="To work on the Dark web Crawling you need to connect with the Tor Browser to install the tor browser click the tor button"
        android:textAlignment="center"
        android:textColor="#18d922"
        android:textSize="20sp" />

    <Button
        android:id="@+id/TorButton"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/button_default_color"
        android:fontFamily="@font/fira_mono_medium"
        android:gravity="center"
        android:padding="30sp"
        android:text="TOR"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_mono_medium"
        android:padding="40dp"
        android:textColor="#18d922"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="If you already have Tor browser connect it with it and start crawling" />

    <Button
        android:id="@+id/button10"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/button_default_color"
        android:fontFamily="@font/fira_mono_medium"
        android:gravity="center"
        android:padding="30sp"
        android:text="CRAWL"
        android:textSize="21dp"
        android:textStyle="bold" />

</LinearLayout>