<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d293a"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#0d293a"
        android:padding="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/app_wallpaper" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#0d293a"
        android:fontFamily="@font/monoton"
        android:gravity="center"
        android:padding="15dp"
        android:shadowColor="#18d922"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="@string/dark_web_crawling"
        android:textColor="#18d922"
        android:textSize="30dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0d293a"
        android:fontFamily="@font/fira_mono_medium"
        android:padding="25dp"
        android:text="Web crawlers, also known as web spiders or web robots, are automated programs that browse the World Wide Web in a methodical, automated manner. They are designed to discover and index new and updated web pages, and to follow links between pages to discover new content. Web crawlers are an essential part of search engines, as they help to index and organize the vast amount of information on the internet."
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="#18d922" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:fontFamily="@font/fira_mono_medium"
        android:gravity="center"
        android:padding="30sp"
        android:text="Start"
        android:backgroundTint="@color/button_default_color"
        android:textSize="22dp"
        android:textStyle="bold" />

</LinearLayout>